@import 'nib'

html
	font-size 100%

body
	font-family 'Lato', serif 
	padding 0
	margin 0
	box-sizing border-box
	
//Colores de texto
.color__white
	color  white
.color__blue
	color #3686be
.color__green
	color #93cc76
.color__dark
	color #353D3F
//Formato de texto
.text__clean
	text-decoration none
.text__center
	text-align center
.text__bold
	font-weight bold
//tamaño de texto
.tetx__1rem
	font-size 1rem
.text__1_1rem
	font-size 1.1rem
.text__1_2rem
	font-size 1.2rem
.text__1_3rem
	font-size 1.3rem
.text__1_4rem
	font-size 1.4rem
.text__1_5rem
	font-size 1.5rem
.text__2rem
	font-size 2rem
.text__2_5rem
	font-size 2.5rem
//Backgrounds
.bg__dark
	background-color #353D3F
.gradient__black
	background linear-gradient(transparent, black)
.display__block
	display block
//padding
.padding__1rem
	padding 1rem
.padding__bottom__2rem
	padding-bottom 2rem
.padding__bottom__3rem
	padding-bottom 3rem	
// margin
.margin__0
	margin 0
.cursor__pointer
	cursor pointer
//Envoltura
.wrap
	max-width 800px
	margin-left auto
	margin-right auto	
.main-header
	position relative
	height 66px
	display flex
	justify-content space-between
	z-index 100
	
	&_logo
		width 50px
		height 50px
		margin .5rem
	&_menu
		&_container
			list-style-type none
			max-width 500px
			width 100%
			height 0px
			overflow hidden
			transition: height .3s;
			position absolute
			right 0
			top 100%
			margin 0
			&_item
				display block
				font-sise 1.5rem


.checkbox_hack_label
	height 50px
	width 50px
	line-height 50px
	margin-top 8px				
	text-align center
	&:before
		content "☰"
		font-size 2rem
		color #fff
.checkbox_hack
	display none
	&:checked
		~.checkbox_hack_label
			&:before
				content "X"
			~.main-header_menu_container
				height 204px
				
				
.logo
	height 100%
	
.landing-banner
	background-image url('/img/cover.jpg')
	background-size cover
	background-position center
	background-repeat no-repeat
	display block
.landing-avatar
	width 90px
	overflow hidden
	border-radius 50%
	border 4px solid #fff
.zig-zag-border_light
	position relative
	width 100%
	min-height 200px	
	&:before
		content ""
		position absolute
		width 100%
		height 40px
		top -40px
		background:
		linear-gradient(
		  45deg, transparent 33.333%,
		  #fff 33.333%, #fff 66.667%,
		  transparent 66.667%
		),
		linear-gradient(
		  -45deg, transparent 33.333%,
		  #fff 33.333%, #fff 66.667%,
		  transparent 66.667%
		);
		background-size: 40px 80px;
.zig-zag-border_dark
	position relative
	width 100%
	min-height 200px	
	&:before
		content ""
		position absolute
		width 100%
		height 40px
		top -40px
		background:
		linear-gradient(
		  45deg, transparent 33.333%,
		  #353D3F 33.333%, #353D3F 66.667%,
		  transparent 66.667%
		),
		linear-gradient(
		  -45deg, transparent 33.333%,
		  #353D3F 33.333%, #353D3F 66.667%,
		  transparent 66.667%
		);
		background-size: 40px 80px;		
